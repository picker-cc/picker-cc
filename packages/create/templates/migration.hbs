{{#if isTs }}import { generateMigration, revertLastMigration, runMigrations } from '@picker-cc/core';{{else}}const { generateMigration, revertLastMigration, runMigrations } = require('@picker-cc/core');{{/if}}
{{#if isTs }}import program from 'commander';{{else}}const program = require('commander');{{/if}}

{{#if isTs }}import { config } from './src/picker-config';{{else}}const { config } = require('./src/picker-config');{{/if}}

program
    .command('generate <name>')
    .description('Generate a new migration file with the given name')
    .action(name => {
        return generateMigration(config, { name, outputDir: './migrations' });
    });

program
    .command('run')
    .description('Run all pending migrations')
    .action(() => {
        return runMigrations(config);
    });

program
    .command('revert')
    .description('Revert the last applied migration')
    .action(() => {
        return revertLastMigration(config);
    });

program.parse(process.argv);
