/* Because we have a sticky header we need to offset */
/* the anchors so the title isnâ€˜t behind the header */
:target::before {
  content: "";
  display: block;
  height: 120px;
  margin: -120px 0 0;
}

@media screen and (min-width: 87.5em) {
  .ml2-xl {
    margin-left: 0.5rem;
    margin-left: var(--spacing-extra-small);
  }
  .mh2-xl,
  .mr2-xl {
    margin-right: 0.5rem;
    margin-right: var(--spacing-extra-small);
  }
  .mh2-xl {
    margin-left: 0.5rem;
    margin-left: var(--spacing-extra-small);
  }
  .pl2-xl {
    padding-left: 0.5rem;
    padding-left: var(--spacing-extra-small);
  }
}
